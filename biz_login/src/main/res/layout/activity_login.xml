<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background"
        android:orientation="vertical">

        <zhongmu.org.lib_ui.title.HiNavigationBar
            android:id="@+id/main_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@color/color_white"
            android:elevation="@dimen/dp_4" />

        <zhongmu.org.lib_ui.input.InputItemLayout
            android:id="@+id/input_item_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_white"
            android:elevation="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_16"
            app:bottomLineAppearance="@style/leftMargin_lineAppearance"
            app:hint="@string/input_item_hint_user_name"
            app:inputTextAppearance="@style/inputTextAppearance"
            app:title="@string/input_item_title_user_name"
            app:titleTextAppearance="@style/titleTextAppearance"
            app:topLineAppearance="@style/lineAppearance" />


        <zhongmu.org.lib_ui.input.InputItemLayout
            android:id="@+id/input_item_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@color/color_white"
            android:elevation="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_16"
            app:bottomLineAppearance="@style/lineAppearance"
            app:hint="@string/input_item_desc_pwd"
            app:inputTextAppearance="@style/inputTextAppearance"
            app:inputType="password"
            app:title="@string/input_item_title_pwd"
            app:titleTextAppearance="@style/titleTextAppearance" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/action_login"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:elevation="@dimen/dp_4"
            android:text="@string/title_login"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_16"
            app:backgroundTint="@color/color_dd2"
            app:cornerRadius="@dimen/dp_6" />

    </LinearLayout>
</layout>